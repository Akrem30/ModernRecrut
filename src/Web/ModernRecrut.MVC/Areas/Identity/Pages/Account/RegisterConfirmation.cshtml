@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirmation de l'enregistrement";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
        <p>
            Cette application n'a pas actuellement d'expéditeur d'email réel enregistré, voir <a href="https://aka.ms/aspaccountconf">ces documents</a> pour savoir comment configurer un expéditeur du courriel réel.
            Normalement, il s'agit d'un courriel : <a id="confirm-link" href="@Model.EmailConfirmationUrl">Cliquez ici pour confirmer votre compte</a>
        </p>
    }
    else
    {
        <p>
            Veuillez vérifier votre courriel pour confirmer votre compte.
        </p>
    }
}

