@page
@model LoginModel

@{
    ViewData["Title"] = "Connexion";
}

@* <h1>@ViewData["Title"]</h1> *@
<body class="bg-dark text-white">
<div class="row bg-dark">
    <div class="d-flex">
            <div class="col-6 p-3">
                <img class="card-img-top" src="/images/catContrat.png" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail" alt="Miau miau miau">
            </div>
            <div class="col-6">
            <section>
            <form id="account" method="post">
                <h2>Se connecter</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class="form-label"></label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Connecter</button>
                </div>
                <div>
                    <p>
                     <a id="forgot-password" asp-page="./ForgotPassword">Mot de passe oublié</a>
                     </p>
                     <p>
                     <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Créer un compte</a>
                     </p>
                     <p>
                     <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Renvoyer l'email de confirmation</a>
                     </p>
                </div>
                        <h2 class="mt-4">
                            Connectez-vous et commencez à tracer votre chemin 
                            vers le succès professionnel !!!
                        </h2>
            </form>
        </section>
        </div>
    </div>
