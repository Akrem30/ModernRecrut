@model List<ModernRecrut.MVC.Models.ManageUserRolesViewModel>
@{
    ViewData["Title"] = "Assignation";
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Gérer les rôles d'utilisateur</h2>
            Ajouter ou supprimer des rôles pour l'utilisateur :  @ViewBag.UserNomComplet
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].NomRole" />
                    <input asp-for="@Model[i].Selectionne" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].Selectionne">
                        @Model[i].NomRole
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Modifier" class="btn btn-primary"
                   style="width:auto" />
            <a asp-action="Index" asp-route-id="@ViewBag.userId"
               class="btn btn-primary" style="width:auto">Retourner à la liste</a>
        </div>
    </div>
</form>
