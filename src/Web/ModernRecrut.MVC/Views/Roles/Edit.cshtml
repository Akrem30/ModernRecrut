@model ModernRecrut.MVC.Models.RoleViewModel
@{
    ViewData["Title"] = "Modification";
}

<h1>Modification du rôle</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RoleId" />
            <h5 class="text-danger">@Html.ValidationMessage("roleAdmin")</h5>
            <div class="form-group">
                <div style="font-weight:bold;font-size:large">@Html.DisplayNameFor(model => model.RoleId) : @Html.DisplayFor(model => model.RoleId)</div>
            </div>
            <div class="form-group">
                <label asp-for="NomRole" class="control-label"></label>
                <input asp-for="NomRole" class="form-control" />
                <span asp-validation-for="NomRole" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Modifier" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retourner à la liste</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}